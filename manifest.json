{
  "name": "SLT Portal Fixes",
  "description": "Show remaining data and fix some other issues within the MySLT portal",
  "action": {},
  "manifest_version": 3,
  "version": "0.0.2",
  "permissions": ["activeTab", "declarativeContent"],
  "host_permissions": ["https://myslt.slt.lk/*"],
  "content_scripts": [
    {
      "matches": ["https://myslt.slt.lk/*"],
      "js": ["js/content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "images/on-16.png",
    "32": "images/on-32.png",
    "48": "images/on-48.png",
    "64": "images/on-64.png",
    "128": "images/on-128.png"
  }
}
